{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "jquery": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "ecmaVersion": 5,
    "sourceType": "module"
  },

  "rules": {
    "array-bracket-spacing": [0, "never"],
    "arrow-spacing": [0, {"before": true, "after": true}],
    "arrow-parens": [0, "as-needed"],
    "block-spacing": [0, "always"],
    "brace-style": [0, "1tbs"],
    "camelcase": [0, {"properties": "never"}],
    "comma-spacing": [0, {"before": false, "after": true}],
    "comma-style": 0,
    "computed-property-spacing": [0, "never"],
    "dot-notation": 0,
    "eol-last": 0,
    "eqeqeq": [0, "smart"],
    "generator-star-spacing": [0, {"before": false, "after": true}],
    "indent": [0, 0, {"SwitchCase": 1}],
    "jsx-quotes": [0, "prefer-double"],
    "key-spacing": [0, {"afterColon": true, "beforeColon": false, "mode": "strict"}],
    "keyword-spacing": [0, {"before": true, "after": true}],
    "no-const-assign": 0,
    "no-constant-condition": 0,
    # "no-else-return": 0, // Enable one day
    "no-lonely-if": 0,
    "no-multiple-empty-lines": [0, {"max": 1}],
    "no-multi-spaces": 0,
    "no-spaced-func": 0,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 0,
    "no-unused-vars": [0, {"vars": "all", "args": "after-used", "varsIgnorePattern": "React|Intl"}],
    "no-useless-constructor": 0,
    "no-useless-concat": 0,
    "no-unused-expressions": 0,
    "no-var": 0,
    "no-whitespace-before-property": 0,
    "object-curly-spacing": [0, "always", {"objectsInObjects": false}],
    "object-shorthand": [0, "always"],
    "operator-assignment": [0, "always"],
    "prefer-template": 0,
    "quotes": [0, "single"],
    "semi": [0, "never"],
    "space-before-blocks": [0, "always"],
    "space-before-function-paren": [0, "never"],
    "space-in-parens": [0, "never"],
    "space-infix-ops": 0,

    // JSX rules
    "react/jsx-uses-vars": 0
  },

  "plugins": ["react"]
}
